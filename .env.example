# Flask Configuration
FLASK_ENV=development
FLASK_APP=run.py
# Email Configuration (SMTP)
MAIL_SERVER=smtp.example.com
MAIL_PORT=465
MAIL_USE_SSL=True
MAIL_USE_TLS=False
MAIL_USERNAME=your-email@example.com
MAIL_PASSWORD=your-email-password
MAIL_DEFAULT_SENDER=noreply@example.com

# Frontend URLs
FRONTEND_URL_DEV=http://localhost:8080
FRONTEND_URL_PROD=https://your-production-domain.com

# CORS Configuration (comma-separated list of allowed origins)
CORS_ORIGINS_DEV=http://localhost:8080,http://localhost:8081,http://127.0.0.1:8080
CORS_ORIGINS_PROD=https://your-production-domain.com

# Database Configuration
# MariaDB/MySQL (Required for Development and Production)
SQLALCHEMY_DATABASE_URI=mysql+pymysql://your_user:your_password@localhost:3306/your_database_name

# Database Connection Pool Settings
SQLALCHEMY_POOL_SIZE=10
SQLALCHEMY_POOL_RECYCLE=3600
SQLALCHEMY_POOL_PRE_PING=True

# Note: Tests automatically use SQLite (configured in tests/conftest.py)

# Session Configuration (optional overrides)
# LIFETIME_DELAY=15  # Session lifetime in days
# TIMEOUT_DELAY=86400  # Session timeout in seconds (24 hours)

# FTP Configuration (for deployment --send flag)
FTP_HOST=ftp.example.com
FTP_PORT=21
FTP_USER=your-ftp-username
FTP_PASSWORD=your-ftp-password
FTP_REMOTE_PATH=/path/to/deploy/folder
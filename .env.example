# Flask Configuration
FLASK_ENV=development
SECRET_KEY=your-secret-key-here-change-in-production

# Email Configuration (SMTP)
MAIL_SERVER=smtp.example.com
MAIL_PORT=465
MAIL_USE_SSL=True
MAIL_USE_TLS=False
MAIL_USERNAME=your-email@example.com
MAIL_PASSWORD=your-email-password
MAIL_DEFAULT_SENDER=noreply@example.com

# Frontend URLs
FRONTEND_URL_DEV=http://localhost:8080
FRONTEND_URL_PROD=https://your-production-domain.com

# Database Configuration
# SQLALCHEMY_DATABASE_URI=sqlite:///memos.db  # Default, can override here

# Session Configuration (optional overrides)
# LIFETIME_DELAY=15  # Session lifetime in days
# TIMEOUT_DELAY=86400  # Session timeout in seconds (24 hours)
